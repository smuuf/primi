#!/bin/bash

cd $(dirname $0)
declare -i RESULT=0

if [[ "$1" == "--coverage" ]]; then
	COV="--coverage"
fi

function info() {
    echo "███ $1"
}

info "Language tests"
./test_language $COV
RESULT+=$?

info "Smoke tests"
./test_smoke
RESULT+=$?

info "Unit tests"
./test_unit $COV
RESULT+=$?

info "Exit code: $RESULT"
exit $RESULT
